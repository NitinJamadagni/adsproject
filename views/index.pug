//- index.pug

doctype html
html
 head
  link(rel="stylesheet", href="graph-creator.css")
  link(rel="stylesheet" , href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.17/d3.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.16.4/lodash.min.js")
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
  script(src="alchemy.js", type="text/javascript")
 body(style="{background-color: #4c93ef;}")

  #database
   button(id='settings-database' onClick='openNav()')
    img(src='settings.png', width='30px', height='30px') 

   div(id='mySideNav', class='sidenav')
    a(href='javascript:void(0)', class='closebtn', onClick='closeNav()',id='closeBtn') &times;
    div(class='form-style-6')
     h1 Database Settings
     form
      input(type='text', id='database-host', placeholder='Database Host')
      input(type='text', id='database-port', placeholder='Database Port') 
      input(type='button', id='find-database', value ='Find Databases')
      select(id='database-name-select', placeholder ='Database Names')
       option(value="", selected='true') Select Database
      input(type='button', id='connect-database', value='Connect Database')

  
    div(class='form-style-6')
     h1 Database Information
     form
      input(type='text', id='database-host-connected', placeholder='Database Host Connected ', readonly=true)
     input(type='button', id='disconnect-database', value='Disconnect Database')
      

  #label-display(class='scrollmenu')
   p(id='label-display-title') Node Labels 
   ul#labels

  div#canvas-body
   input(type='file', id='file-hidden-upload')
   div(class='btn-group-vertical', id ='toolbox')
     button(id='submit-query' class='btn btn-primary') Submit Query
     button(id='pointer-drag' class='btn btn-primary') Draw
     button(id='query-drag' class='btn btn-primary') Select 
     button(id='delete-button', class='btn btn-primary') Delete
     button(id='delete-graph' class='btn btn-primary') Refresh Query
     button(id='upload-file', class='btn btn-primary') Upload File
     button(id='file-download' class='btn btn-primary') Download File
   
   #query-section
    h3(id='query-section-label') QUERY REGION
    
   #result-section
    h3(id='result-section-label') RESULTS REGION
    div#list-section
     h3(id='result-count') RESULT MATCHES
     ul#result-list
    #pagination
      button(id='previous_page', class='pagination_button') Previous
      button(id='next_page', class='pagination_button') Next 
    div(class="alchemy", id='alchemy') 
  #chart-section



  #connection
   h6 Connecting to database.
   a(id='close_loading_connection',style="{padding: 6px}") &times  


  #error
   h6 Node Name Error.
   a(id='close_error',style="{padding: 6px}") &times

  #note
   h6 Database Connected.
   a(id='close',style="{padding: 6px}") &times
  
  #warning
   h6 Database Already Connnected.
   a(id='close_warning', style="{padding: 6px}") &times

  #loading
   h6 Querying
   a(id='close_loading', style="{padding: 6px}") &times

  #loading_finished
   h6 Loading Finished.
   a(id='close_finished', style="{padding: 6px}") &times   

  script(type="text/javascript", src="//d3js.org/d3.v3.js")
  script(type="text/javascript", src="//cdn.jsdelivr.net/filesaver.js/0.1/FileSaver.min.js")
  script(type="text/javascript", src="graph-creator.js")
  script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
  script(type="text/javascript", src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
  script(type="text/javascript", src="https://code.highcharts.com/highcharts.js")
  script(type="text/javascript", src="https://code.highcharts.com/modules/exporting.js")
